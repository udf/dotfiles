#------------------------------------#
#                                    #
#           Polybar config           #
#                                    #
#------------------------------------#

[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
black = ${xrdb:color8}
red = ${xrdb:color9}
green = ${xrdb:color10}
yellow = ${xrdb:color11}
blue = ${xrdb:color12}
magenta = ${xrdb:color13}
cyan = ${xrdb:color14}
white = ${xrdb:color15}
grey = #928374
bblack = ${xrdb:color0}
bred = ${xrdb:color1}
bgreen = ${xrdb:color2}
byellow = ${xrdb:color3}
bblue = ${xrdb:color4}
bmagenta = ${xrdb:color5}
bcyan = ${xrdb:color6}
bwhite = ${xrdb:color7}

[bar/main_bar]
#monitor=${env:MONITOR:HDMI-2}
bottom=true
width=100%
height=20
offset-x=0%
offset-y=0%
radius=0.0
fixed-center=true

background=${colors.background}
foreground=${colors.foreground}

line-size=2

padding-left=10
padding-right=125

module-margin-left=0
module-margin-right=1

#font-0=DejaVu Sans
font-0=Hack:size=9;1
font-1=FontAwesome:size=9;1
font-2=Misc Fixed:size=9;1
font-3=Misc Fixed Wide:size=9;1

modules-left=musicinfo i3 xwindow
modules-center=date volume
modules-right=downspeed upspeed cpu memory

tray-position=right
tray-padding=5
tray-offset-x=-15
tray-transparent=false
tray-maxsize=18
tray-detached=true
tray-background=${colors.background}

wm-restack=i3


[settings]
screenchange-reload=true


[module/musicinfo]
type=custom/script
exec=~/.config/polybar/music.py 112
label=%output%
format=<label>
tail=true


[module/i3]
type            = internal/i3
format          = <label-state><label-mode>
index-sort      = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces  = true

label-mode-foreground      = ${colors.blue}
label-mode-background      = ${colors.background}

label-focused              = %{B#262a33}  %name%  %{B#262a33}
label-focused-padding      = 0

label-unfocused            = %name%
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding    = 2

label-urgent               = %name%
label-urgent-background    = ${colors.red}
label-urgent-foreground    = ${colors.foreground}
label-urgent-padding       = 2



[module/xwindow]
type=internal/xwindow
label=%title:0:100:...%
label-padding=1




[module/date]
type=internal/date
interval=1
date=" %a %b %d"
time="%T %p "
format-prefix-foreground=${colors.foreground}
format-underline=${colors.bwhite}
label=%date% %time%

[module/volume]
type=internal/volume
label-volume = %percentage:3%%
format-volume=<ramp-volume> <label-volume>
format-volume-underline=${colors.bwhite}
label-muted= 
label-muted-underline=$#ff4a4a
ramp-volume-0=
ramp-volume-1=
ramp-volume-2=




[global/wm]
margin-top=5
margin-bottom=5


[module/cpu]
type=internal/cpu
interval=1
format-prefix=" "
format-underline=#ff4a4a
label=%percentage:2%%


[module/memory]
type=internal/memory
interval=5
format-prefix=" "
format-underline=#4aff4a
label=%percentage_used:2%%


[module/downspeed]
type=internal/network
interface=enp5s0
interval=1
label-connected= %downspeed:4%

format-connected-underline=#ffff4a

[module/upspeed]
type=internal/network
interface=enp5s0
interval=1
label-connected= %upspeed:4%

format-connected-underline=#4affff
