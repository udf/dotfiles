! rofi
! Enable the extended coloring options
rofi.color-enabled: true
!                  bg       border   separator
rofi.color-window: #2f343f, #A8A8A8, #A8A8A8
!                  bg       fg       bg-alt   hl-bg    hl-fg
rofi.color-normal: #2f343f, #767B87, #2f343f, #2f343f, #F6F7F9
rofi.color-active: #2f343f, #767B87, #2f343f, #2f343f, #F6F7F9
rofi.color-urgent: #2f343f, #767B87, #2f343f, #2f343f, #F6F7F9

rofi.separator-style: solid
rofi.sidebar-mode:    false
rofi.lines:           7
rofi.font:            Hack Regular 12
rofi.bw:              0
rofi.columns:         2
rofi.padding:         5
rofi.fixed-num-lines: true
rofi.hide-scrollbar:  true

! urxvt
URxvt*geometry:   115x40
URxvt*font:       xft:Hack:pixelsize=14:antialias=true:hinting=true
URxvt*boldFont:   xft:Hack:bold:pixelsize=14:antialias=true:hinting=true
URxvt*depth:      32
URxvt*borderless: 1
URxvt*saveLines:  2000

!! perl extensions
URxvt.perl-ext: default,url-select,clipboard

! url-select (part of urxvt-perls package)
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.url-select.autocopy:  true
URxvt.url-select.button:    2
URxvt.url-select.launcher:  google-chrome-stable
URxvt.url-select.underline: true

! clipboard
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-C: perl:clipboard:copy

! disable the stupid ctrl+shift 'feature'
URxvt.iso14755:    false
URxvt.iso14755_52: false

! color scheme:
URxvt*background: [85]#262932
URxvt*foreground: #D8DDE4

URxvt*colorUL: #86a2b0

!
! scrollbar
!
! enable scrollbar
URxvt*scrollBar:           true     
URxvt*scrollBar_right:     true
URxvt*thickness:           5
URxvt*scrollColor:         #2f343f
URxvt*scrollstyle:         plain

Xcursor.size: 16
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
